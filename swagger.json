{
    "openapi": "3.0.0",
    "info":{
        "version":"1.0.0",
        "description":"API for E-Commerce application",
        "title":"E-commerce API"
    },
    "servers":[
        {
            "url":"http://localhost:3000"
        }
    ],

    "components":
    {
        "securitySchemes":
        {
            "JWT":
            {
                "in":"header",
                "name":"Authorization",
                "type": "apiKey"
            }
        }
    },

    "paths":
    {
        "/api/signin": 
        {
            "post":
            {
                "tags": ["Users"],
                "summary":"Login",
                "description":"User login to get token",
                "requestBody":
                {
                    "content":
                    {
                        "application/json":{
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email":{
                                        "type": "string"
                                    },
                                    "password":{
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "200": {
                        "description":"login successfull"
                    },
                    "400": {
                        "description": "Invalid credentials, please try again."
                    }
                }
            }
        },

        "/api/posts/all": {
            "get":
            {
                "tags": ["Posts"],
                "summary":"Get Posts",
                "description":"User will get all posts",
                "security":[{"JWT": {} }],
                "responses":
                {
                    "200": {
                        "Posts":"posts"
                    },
                    "401": { 
                        "success": false, 
                        "msg": "error" 
                    }
                }
            }
        }
    }
}
